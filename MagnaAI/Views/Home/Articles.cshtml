@{
    ViewData["Title"] = "Články";
}
<section class="section">
    <div class="articles-header">
        <div class="articles-title-wrapper">
            <h1>Vzdělávací materiály</h1>
            <p>Přístup k prezentacím, článkům a dokumentům</p>
        </div>
    </div>

    <div class="materials-grid">
        <div class="material-card">
            <div class="card-header">
                <h3>Prezentace</h3>
                <span class="badge badge-internal">Interní</span>
            </div>
            <p class="card-description">
                Školící prezentace a materiály pro AI vzdělávání zaměstnanců.
            </p>
            <div class="card-features">
                <div class="feature-item">
                    <span class="icon success">✓</span>
                    <span>Schváleno pro firemní použití</span>
                </div>
                <div class="feature-item">
                    <span class="icon success">✓</span>
                    <span>Aktuální školící materiály</span>
                </div>
                <div class="feature-item">
                    <span class="icon warning">⚠</span>
                    <span>Vyžaduje firemní přihlášení</span>
                </div>
            </div>
            <a href="https://magna.sharepoint.com/sites/ai-training/presentations" class="btn btn-primary" target="_blank">
                Otevřít prezentace
            </a>
        </div>

        <div class="material-card">
            <div class="card-header">
                <h3>Články a dokumenty</h3>
                <span class="badge badge-internal">Interní</span>
            </div>
            <p class="card-description">
                Odborné články, návody a dokumentace k AI nástrojům.
                Komplexní zdroje pro pokročilé využití.
            </p>
            <div class="card-features">
                <div class="feature-item">
                    <span class="icon success">✓</span>
                    <span>Schváleno pro firemní použití</span>
                </div>
                <div class="feature-item">
                    <span class="icon success">✓</span>
                    <span>Články o AI</span>
                </div>
                <div class="feature-item">
                    <span class="icon warning">⚠</span>
                    <span>Vyžaduje firemní přihlášení</span>
                </div>
            </div>
            <a href="https://magna.sharepoint.com/sites/ai-training/articles" class="btn btn-primary" target="_blank">
                Otevřít články
            </a>
        </div>
    </div>
</section>